
<!-- DISPLAY USER INFO -->
<h2><%= @user.first_name %></h2>
<p><%= @user.last_name %></p>
<p><%= @user.email %></p>
<p><%= @user.image_url %></p>



<!-- SHOW POSTS FOR THE USER -->
<% if @user.posts.length > 0 %>
	<p><h1>Posts:</h1>
		<% @user.posts.each do |post| %>
		<a href="/users/<%=@user.id%>/posts/<%=post.id%>"><%=post.title%></a>
		<% end %>
	</p>
<% end %>

<!-- DISPLAY PAGES OF THE USER + "CREATE NEW PAGE" -->
<a href="/users/<%=@user.id%>/pages/new">CREATE NEW PAGE</a>
<% if @user.pages.length > 0 %>
	<p><h1>Pages:</h1>
		<% @user.pages.each do |page| %>
		<a href="/users/<%=@user.id%>/pages/<%=page.id%>"><%=page.name%></a>
		<% end %>
	</p>
<% end %>

<!-- DISPLAY TAGS OF THE USER -->
<% if @user.tags.length > 0 %>
	<p><h1>tags:</h1>
		<% @user.tags.each do |tag| %>
		<a href="/users/<%=@user.id%>/tags/<%=tag.id%>"><%=tag.name%></a>
		<% end %>
	</p>
<% end %>

<!-- EDIT HREF -->
<h3><a href="/users/<%=@user.id%>/edit">EDIT YOUR USER</a></h3>

<!-- LINK TO GO BACK TO LIST OF USERS -->
<h3><a href="/users/">ALL USERS</a></h3>

<!-- DELETE BUTTON -->
<%= button_to  "Delete This User?", user_path(@user), method: :delete %>
























