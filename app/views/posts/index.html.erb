<% flash.each do |k,v| %>
  <h2 id="<%= k %>"><%= v %></h2>
<% end %>
<div>
  <% @posts.each do |post| %>
    <%= render partial: 'preview', :locals => {:post => post, :user => @user} %>
    <% post.tags.each do |tag| %>
    <a href="tags/<%= tag.id %>"><button><%= tag.name %></button></a>
  <% end %>
  <% end %>
  <p><a href="../../users/<%= @user.id %>">Back</a></p>

</div>
