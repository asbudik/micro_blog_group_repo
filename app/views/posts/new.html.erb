<h1 class="subtitle"><%= @user.first_name %> <%= @user.last_name %></h1> <br>
  <h4><%= @user.email %></h4><br>
<div class="col-xs-offset-4 col-xs-4">
<div>
  <h2><%= @post.title %></h2> <br>
  <p><%=  @post.body %></p>
</div>
<div class="form">
  <%= form_for [@user, @post] do |f| %>
    <%= f.text_field :title, placeholder: "Title", class: "form-control"%><br>
    <%= f.text_area :body, placeholder: "Post here", class: "form-control" %><br>

    <!-- FIELD FOR TAGS -->
     <%= text_field_tag :tags, nil, placeholder: "Enter tags seperated by commas", class: "form-control" %><br>
    <%= f.submit "Save Comment", class: "edit-button btn btn-success form-control" %>
  <% end %>
</div>
</div>