
<h1 class="subtitle">Login Page</h1>



<div class="form">
	<%flash.each do |k,v|%>
	<% if session[:user_id]==@user %>
		<h2 class="bg-danger"style="color:red;border-radius:10px;text-align:center;font-family:arial;" id="<%=k %>"> <%= v %></h2>

	<%else%>
		<h2 class="bg-success" style="color:green;border-radius:10px;text-align:center;font-family:arial"  id="<%=k %>"> <%= v %></h2
	<%end%>
	<%end%>
<% if session[:user_id]==@user %>
	<%= form_for :user do |f| %>

		<%= f.text_field :email, placeholder: "enter email", class: "form-control" %><br>
		<%= f.password_field :password, placeholder: "and password", class: "form-control" %>
		<%= f.submit "Login", class: "btn form-control btn-success"%>
		<%= link_to "Forgot Password?", new_password_path %>
	<%end%>
<%end%>
</div>
